  },
  "operational_guidelines": {
    "enable_local_llm": true,
    "routing_policy": {
      "prefer_external": false,
      "thresholds": {
        "prefer_external": false
      }
    }
  },
  "external_llms": {
    "primary_provider": null,
    "routing_preferences": {
      "prefer_external": false
    }
  }
