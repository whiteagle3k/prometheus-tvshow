  "capabilities": [
    "conversation",
    "sarcastic_commentary",
    "observational_humor",
    "cynical_analysis",
    "witty_remarks",
    "detached_observation",
    "existential_commentary",
    "satirical_expression",
    "ironic_commentary",
    "philosophical_melancholy"
